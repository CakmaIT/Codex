<Window x:Class="Ozge.App.Views.ProjectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Ozge.App.ViewModels"
        mc:Ignorable="d"
        Title="Ã–zge2 Projector"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Background="#101820">
    <Window.DataContext>
        <vm:ProjectorViewModel />
    </Window.DataContext>
    <Grid>
        <Border Background="#101820" />
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="800">
            <TextBlock Text="{Binding Mode}" FontSize="48" Foreground="White" HorizontalAlignment="Center" />
            <TextBlock Text="{Binding Prompt}" FontSize="28" Foreground="White" Margin="0,24,0,0" TextWrapping="Wrap" TextAlignment="Center" />
            <TextBlock Text="{Binding Feedback}" FontSize="24" Foreground="#FFD700" Margin="0,32,0,0" TextAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
