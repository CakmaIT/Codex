<Window x:Class="Ozge.App.Presentation.Windows.TeacherDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Ozge.App.Presentation.ViewModels"
        mc:Ignorable="d"
        Title="Ozge2 - Teacher Dashboard"
        Height="780"
        Width="1360"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="24" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    Grid.ColumnSpan="3"
                    Margin="0,0,0,16"
                    VerticalAlignment="Top">
            <TextBlock Text="Ozge2 Teacher Dashboard"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="0,0,24,0" />
            <Button Content="{Binding AnswerRevealButtonText}"
                    Command="{Binding ToggleAnswerRevealCommand}" />
            <Button Content="{Binding FreezeButtonText}"
                    Command="{Binding ToggleFreezeCommand}"
                    Margin="8,0,0,0" />
            <Button Content="Open Projector"
                    Command="{Binding OpenProjectorCommand}"
                    Margin="8,0,0,0" />
            <Button Content="{Binding ProjectorFullScreenButtonText}"
                    Command="{Binding ToggleProjectorFullScreenCommand}"
                    Margin="8,0,0,0" />
        </StackPanel>

        <Border Grid.Row="1"
                Background="#33101820"
                CornerRadius="8"
                Padding="12">
            <StackPanel>
                <TextBlock Text="Classes"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8" />
                <ListBox ItemsSource="{Binding Classes}"
                         SelectedItem="{Binding SelectedClass, Mode=TwoWay}"
                         Height="280">
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type viewModels:ClassItemViewModel}">
                            <Border Padding="10"
                                    Margin="4"
                                    Background="#55101820"
                                    CornerRadius="4">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="16"
                                               FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding TotalScore, StringFormat=Total Score: {0}}"
                                               Margin="0,4,0,0" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <Border Grid.Column="2"
                Grid.Row="1"
                Background="#22101820"
                CornerRadius="8"
                Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="Class Overview"
                           FontSize="20"
                           FontWeight="SemiBold" />

                <UniformGrid Grid.Row="1"
                             Margin="0,12,0,12"
                             Rows="1"
                             Columns="4">
                    <StackPanel Margin="0,0,12,0">
                        <TextBlock Text="Selected Class" FontWeight="Bold" />
                        <TextBlock Text="{Binding SelectedClass.Name}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextTrimming="CharacterEllipsis" />
                    </StackPanel>
                    <StackPanel Margin="0,0,12,0">
                        <TextBlock Text="Selected Unit" FontWeight="Bold" />
                        <TextBlock Text="{Binding SelectedUnit.Name}"
                                   FontSize="16"
                                   TextTrimming="CharacterEllipsis" />
                    </StackPanel>
                    <StackPanel Margin="0,0,12,0">
                        <TextBlock Text="Projector" FontWeight="Bold" />
                        <TextBlock Text="{Binding ProjectorStatus}" FontSize="16" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Answer Reveal" FontWeight="Bold" />
                        <TextBlock Text="{Binding AnswerRevealStatus}" FontSize="16" />
                    </StackPanel>
                </UniformGrid>

                <Border Grid.Row="2"
                        Background="#33101820"
                        CornerRadius="6"
                        Padding="12"
                        Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Quiz Control"
                                   FontWeight="SemiBold"
                                   FontSize="18" />

                        <WrapPanel Margin="0,12,0,0"
                                   ItemHeight="80"
                                   ItemWidth="260">
                            <StackPanel Width="240" Margin="0,0,16,0">
                                <TextBlock Text="Units"
                                           FontWeight="Bold"
                                           Margin="0,0,0,4" />
                                <ComboBox ItemsSource="{Binding SelectedClass.Units}"
                                          SelectedItem="{Binding SelectedUnit, Mode=TwoWay}"
                                          DisplayMemberPath="Name"
                                          MinWidth="200" />
                            </StackPanel>

                            <StackPanel Width="260" Margin="0,0,16,0">
                                <TextBlock Text="Status"
                                           FontWeight="Bold"
                                           Margin="0,0,0,4" />
                                <TextBlock Text="{Binding QuizStatus}"
                                           TextWrapping="Wrap" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Bottom">
                                <Button Content="Start Quiz"
                                        Command="{Binding StartQuizCommand}"
                                        IsEnabled="{Binding CanStartQuiz}" />
                                <Button Content="Next Question"
                                        Command="{Binding NextQuestionCommand}"
                                        Margin="8,0,0,0"
                                        IsEnabled="{Binding CanAdvanceQuestion}" />
                                <Button Content="End Quiz"
                                        Command="{Binding EndQuizCommand}"
                                        Margin="8,0,0,0"
                                        IsEnabled="{Binding CanEndQuiz}" />
                            </StackPanel>
                        </WrapPanel>

                        <TextBlock Text="Loading quiz..."
                                   Foreground="{StaticResource TeacherAccentBrush}"
                                   Margin="0,8,0,0"
                                   Visibility="{Binding IsQuizLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />

                        <Border Background="#22101820"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="{Binding CurrentQuestion.Prompt}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           TextWrapping="Wrap"
                                           MinHeight="32" />
                                <ItemsControl ItemsSource="{Binding CurrentQuestion.Options}"
                                              Margin="0,12,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type viewModels:QuizOptionItemViewModel}">
                                            <Border Background="#44101820"
                                                    CornerRadius="4"
                                                    Padding="8"
                                                    Margin="0,4">
                                                <DockPanel LastChildFill="False">
                                                    <TextBlock Text="{Binding Text}"
                                                               FontSize="16"
                                                               TextWrapping="Wrap"
                                                               Width="400" />
                                                    <TextBlock Text="Correct"
                                                               FontWeight="Bold"
                                                               Foreground="{StaticResource TeacherAccentBrush}"
                                                               Margin="8,0,0,0"
                                                               Visibility="{Binding IsCorrect, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                </DockPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <Border Background="#22101820"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="Quiz Outline"
                                           FontWeight="SemiBold"
                                           FontSize="16" />
                                <ItemsControl ItemsSource="{Binding QuizQuestions}"
                                              Margin="0,8,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type viewModels:QuizQuestionViewModel}">
                                            <StackPanel Margin="0,4,0,8">
                                                <TextBlock Text="{Binding Prompt}"
                                                           FontWeight="SemiBold"
                                                           TextWrapping="Wrap" />
                                                <ItemsControl ItemsSource="{Binding Options}"
                                                              Margin="16,4,0,0">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate DataType="{x:Type viewModels:QuizOptionItemViewModel}">
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="- "
                                                                           FontSize="14" />
                                                                <TextBlock Text="{Binding Text}"
                                                                           TextWrapping="Wrap"
                                                                           Width="400" />
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <Border Grid.Row="3"
                        Background="#33101820"
                        CornerRadius="6"
                        Padding="12">
                    <StackPanel>
                        <TextBlock Text="Leaderboard"
                                   FontWeight="SemiBold"
                                   FontSize="18" />
                        <ListView ItemsSource="{Binding Leaderboard}"
                                  Margin="0,12,0,0">
                            <ListView.ItemTemplate>
                                <DataTemplate DataType="{x:Type viewModels:GroupScoreItem}">
                                    <DockPanel LastChildFill="True">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding Score}" DockPanel.Dock="Right" />
                                    </DockPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
