<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="TeacherBackgroundBrush" Color="{StaticResource TeacherBackgroundColor}" />
    <SolidColorBrush x:Key="TeacherAccentBrush" Color="{StaticResource TeacherAccentColor}" />
    <SolidColorBrush x:Key="ProjectorBackgroundBrush" Color="{StaticResource ProjectorBackgroundColor}" />
    <SolidColorBrush x:Key="ProjectorAccentBrush" Color="{StaticResource ProjectorAccentColor}" />

    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource TeacherBackgroundBrush}" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="Margin" Value="4" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="Background" Value="{StaticResource TeacherAccentBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style TargetType="ListBox">
        <Setter Property="Margin" Value="4" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Background" Value="#22101820" />
    </Style>
</ResourceDictionary>
